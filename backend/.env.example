# ===================================
# ADAA Backend Environment Variables
# ===================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===================================
# Database Configuration
# ===================================
MONGO_URI=mongodb://localhost:27017/adaa_db
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/adaa_db?retryWrites=true&w=majority

# ===================================
# Redis Configuration
# ===================================
REDIS_BROKER=redis://localhost:6379/0
# For Redis Cloud:
# REDIS_BROKER=redis://username:password@redis-host:port/0

# ===================================
# JWT Authentication
# ===================================
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# AI/LLM Configuration
# ===================================
# OpenAI API Key (for Query Agent)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Groq API Key (alternative LLM provider)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# ===================================
# Email Configuration (Optional)
# ===================================
# For sending email reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@adaa.com

# ===================================
# Application Settings
# ===================================
# Environment: development, staging, production
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===================================
# Celery Configuration
# ===================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=3600

# ===================================
# Security Settings
# ===================================
# Enable HTTPS in production
SECURE_SSL_REDIRECT=False

# Session security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ===================================
# Rate Limiting (Optional)
# ===================================
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=60

# ===================================
# Monitoring & Analytics (Optional)
# ===================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ===================================
# Feature Flags
# ===================================
ENABLE_QUERY_AGENT=True
ENABLE_COLLABORATION=True
ENABLE_EXPORT_PDF=True
ENABLE_EXPORT_EXCEL=True
ENABLE_EMAIL_REPORTS=False

# ===================================
# Development Settings
# ===================================
# Auto-reload on code changes
DEBUG=True
RELOAD=True

# Show detailed error messages
SHOW_ERROR_DETAILS=True
